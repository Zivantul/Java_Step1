import java.util.Scanner;

public class Main {

    /*
    Написать программу, которая загадывает случайное число от 0 до 9, и пользователю дается 3 попытки угадать это число.
    При каждой попытке компьютер должен сообщить больше ли указанное пользователем число чем загаданное, или меньше.
    После победы или проигрыша выводится запрос – «Повторить игру еще раз? 1 – да / 0 – нет»(1 – повторить, 0 – нет).
     */

    public static Scanner sc = new Scanner(System.in);
    public static int popitok = 3; //число попыток на угадывание

    public static void main(String[] args) {
        boolean igraem = true;

        do {
            int zagadChislo = (0 + (int) (Math.random() * 9)); // генерируем число от 0 до 9

            while (popitok > 0) {
                checkChislo(zagadChislo, getOtvet());
                popitok--;
                if (popitok==0) {
                    System.out.println("Жаль... Но попытки закончились и Вы проиграли.... \n");
                }
            }

            System.out.println("Сыграем еще? 1 - да! 0 - нет(((");
            int againPlay = sc.nextInt();

            if (againPlay == 1) {
                popitok = 3;
                igraem = true;
            } else {
                igraem = false;
                System.out.println("До скорых встреч!");
            }

        } while (igraem);
            sc.close();
    }

    public static int getOtvet () {
        System.out.println("Загадайте число от 0 до 9:");
        int otvet = sc.nextInt();
        return otvet;
    }

    public static void checkChislo (int zagad, int otvet){
        if (zagad == otvet) {
            System.out.println("Отлично! Вы угадали!!!");
            popitok = 0;
        } else {
            int razn = otvet - zagad;

            if (razn > 0) {
                System.out.println("Загаданное число - меньше");
            } else {
                System.out.println("Загаданное число - больше");}
        }
    }
}
