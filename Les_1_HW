public class Main {

    public static String result = "";


    public static void main(String[] args) {
        // 2. Создать переменные всех пройденных типов данных, и инициализировать их значения;
        // тип переменной byte
        byte a = 5;
        byte aa = 16;

        // тип переменной short
        short b = 5500;

        // тип переменной int
        int c = 150;
        int cc = -1;

        // тип переменной long
        long d = 176;

        // тип переменной float
        float e = 110.1f;

        // тип переменной double
        double f = 110.1325;

        // тип переменной boolean
        boolean g = true;

        // тип переменной char
        char h = 'M';

        // 3. Написать метод вычисляющий выражение a * (b + (c / d)) и возвращающий результат,
        // где a, b, c, d – входные параметры этого метода;
        System.out.println (raschet_formuly((int) (a), (int) (b), (int) (c), (int) (d)));

        // 4. Написать метод, принимающий на вход два числа, и проверяющий что их сумма лежит в
        // пределах от 10 до 20(включительно), если да – вернуть true, в противном случае – false;
        System.out.println (proverka_itoga((int) (a), (int) (aa)));

        // 5. Написать метод, которому в качестве параметра передается целое число, метод должен
        // напечатать в консоль положительное ли число передали, или отрицательное; Замечание:
        // ноль считаем положительным числом.
        tip_chisla(cc); // cc - точно тип данных integer

        //6. Написать метод, которому в качестве параметра передается целое число, метод должен
        //   вернуть true, если число отрицательное;
        proverka_otricat(cc); // cc - точно тип данных integer
        System.out.println (result); // cc - точно тип данных integer

        //7. Написать метод, которому в качестве параметра передается строка, обозначающая имя,
        //   метод должен вывести в консоль сообщение «Привет, указанное_имя!»;
        String greet_name = "Илья";
        greeting_you (greet_name);

        //8. *Написать метод, который определяет является ли год високосным, и выводит сообщение в
        //   консоль. Каждый 4-й год является високосным, кроме каждого 100-го, при этом каждый 400-й –
        //   високосный.
        int _year = 1996; // задаем значение года
        tip_goda (_year);
    }

    // Метод вернет итог расчета по заданной формуле
    public static int raschet_formuly (int a, int b, int c, int d) {
        int itog = a * (b + (c/d));
        return itog;
    }

    // Метод вернет true/false по итогу проверки попадания числа в диапазон
    public static boolean proverka_itoga (int a, int aa) {
        if ( (a+aa)>= 10 && (a+aa)<= 20) {
            return true;
        } else {
            return false;
        }
    }

    // Метод выведет на экран тип переданного числа (ничего не возвращает)
    public static void tip_chisla (int cc) {
        if (cc >= 0) {
            System.out.println ("Число положительное");
        } else {
            System.out.println ("Число отрицательное");
        }
    }

    //Метод вернет true, если число отрицательное
    public static String proverka_otricat (int cc) {
        if (cc < 0) {
            result = "true";
         }
        return result;
    }

    // метод выводит на экран приветствие с переданным именем
    public static void greeting_you (String _name) {
        System.out.println ("Привет, " + _name + "!");
    }

    // метод выводит на экран тип загаданного года (високосный или нет)
    public static void tip_goda (int year_type) {
        if ((year_type % 4) == 0) {  // каждый 4-й год
            if ((year_type % 400) == 0) { // каждый 400-й год
                result = "Год: " + year_type + " - високосный";
            } else if ((year_type % 100) == 0) {  // но не каждый сотый
                result = "Год: " + year_type + " - НЕвисокосный";
            } else {
                result = "Год: " + year_type + " - високосный";
            }

        } else { // все остальные годы, не кратные 4
            System.out.println ("Год: " + year_type + " - НЕвисокосный");
        }
        System.out.println (result);
    }
}
